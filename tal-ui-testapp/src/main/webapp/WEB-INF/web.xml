<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>tal-ui-testapp</display-name>
    
    <!-- Spring Configuration -->
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext*.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>mvc-dispatch-servlet</servlet-name>
		<servlet-class>org.tpspencer.tal.mvc.servlet.DispatchingServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>web-template-servlet</servlet-name>
		<servlet-class>org.tpspencer.tal.template.servlet.WebTemplateServlet</servlet-class>
		<init-param>
			<description>The URL Generator Factory</description>
			<param-name>urlGeneratorFactoryClass</param-name>
			<param-value>org.tpspencer.tal.mvc.servlet.util.ServletUrlGeneratorFactory</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>web-resource-servlet</servlet-name>
		<servlet-class>org.tpspencer.tal.template.servlet.ResourceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>web-search-servlet</servlet-name>
		<servlet-class>org.tpspencer.tal.template.servlet.SearchServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>mvc-dispatch-servlet</servlet-name>
		<url-pattern>/test/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>web-template-servlet</servlet-name>
		<url-pattern>/template/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>web-resource-servlet</servlet-name>
		<url-pattern>/resource/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>web-search-servlet</servlet-name>
		<url-pattern>/search/*</url-pattern>
	</servlet-mapping>
	
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
