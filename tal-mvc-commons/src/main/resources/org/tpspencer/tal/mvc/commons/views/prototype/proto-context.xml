<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
			
	<!-- 
	 | proto-context.xml
	 | Contains the compilers used by the Prototype View 
	 -->
	
	<!-- Simple HTML Compiler, everything is just divs and spans (tables are still allow) -->
	<bean id="mvccommons.defaultProtoCompiler" class="org.tpspencer.tal.template.compiler.SimpleGenericCompiler">
		<property name="mold">
			<bean class="org.tpspencer.tal.template.compiler.html.HtmlTemplateMold">
				<property name="namedMolds">
					<map>
						<!-- Outputs the member prop with no wrapper -->
						<entry key="commands">
							<bean class="org.tpspencer.tal.template.compiler.SimpleTemplateElementMold">
								<property name="wrapper">
									<bean class="org.tpspencer.tal.template.compiler.html.fragments.MemberFragment" />
								</property>
							</bean>
						</entry>
						
						<!-- Output the menu item action group as a link -->
						<entry key="command">
							<bean class="org.tpspencer.tal.template.compiler.SimpleTemplateElementMold">
								<property name="wrapper">
									<bean class="org.tpspencer.tal.template.compiler.html.fragments.ActionFragment" />
								</property>
								<property name="fragments">
									<list>
										<bean class="org.tpspencer.tal.template.compiler.html.fragments.ChildrenFragment" />
									</list>
								</property>
							</bean>
						</entry>
						
						<!-- Output the menu item with no wrapper -->
						<entry key="caption">
							<bean class="org.tpspencer.tal.template.compiler.SimpleTemplateElementMold">
								<property name="wrapper">
									<bean class="org.tpspencer.tal.template.compiler.html.fragments.ValueFragment" />
								</property>
							</bean>
						</entry>
					</map>
				</property>
			</bean>
		</property>
	</bean>
	
</beans>