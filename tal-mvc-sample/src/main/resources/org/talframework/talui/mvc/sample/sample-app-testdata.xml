<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mvc="http://www.tpspencer.org/schema/mvc"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.tpspencer.org/schema/mvc http://www.tpspencer.org/schema/mvc/mvc.xsd">
	
	<!-- 
	 | sample-app-testdata.xml
	 | Contains test repositories and codes for Sample App
	 | All should be replaced
	 -->
	
			
	<import resource="classpath:/org/tpspencer/tal/mvc/sample/order-repository-context.xml"/>
	<import resource="classpath:/org/tpspencer/tal/mvc/sample/contact-repository-context.xml"/>
			
	<!-- Code Types -->
	<bean class="org.tpspencer.tal.template.render.codes.ResourceCodeTypeFactory" >
		<constructor-arg value="goodsCodeType" />
		<constructor-arg value="org.tpspencer.tal.mvc.sample.GoodsTypeCodes" />
	</bean>
	
	<bean class="org.tpspencer.tal.template.render.codes.ResourceCodeTypeFactory" >
		<constructor-arg value="weightCodeType" />
		<constructor-arg value="org.tpspencer.tal.mvc.sample.WeightCodes" />
	</bean>
	
	<bean class="org.tpspencer.tal.template.render.codes.ResourceCodeTypeFactory" >
		<constructor-arg value="serviceCodeType" />
		<constructor-arg value="org.tpspencer.tal.mvc.sample.ServiceCodes" />
	</bean>
	
	<!-- Static list of towns codes for testing purposes -->
	<bean class="org.tpspencer.tal.template.render.codes.SimpleCodeTypeFactory" >
		<constructor-arg>
			<bean class="org.tpspencer.tal.template.render.codes.SimpleCodeType">
				<constructor-arg value="townCodeType" />
				<constructor-arg>
					<map>
						<entry key="London" value="London" />
						<entry key="New York" value="New York" />
						<entry key="Paris" value="Paris" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<!-- Static list of country codes for testing purposes -->
	<bean class="org.tpspencer.tal.template.render.codes.SimpleCodeTypeFactory" >
		<constructor-arg>
			<bean class="org.tpspencer.tal.template.render.codes.SimpleCodeType">
				<constructor-arg value="countryCodeType" />
				<constructor-arg>
					<map>
						<entry key="UK" value="United Kingdom" />
						<entry key="US" value="United States" />
						<entry key="FR" value="France" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
</beans>