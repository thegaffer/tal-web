<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	<!--
		This file defines the Contact Document Container
		
		TODO: Should there be a Contact Store??
		
		Runtime Requires
		- objexMiddlewareFactory - Factory for the middleware at runtime 
	 -->

	<bean id="contactContainerStrategy" class="org.tpspencer.tal.objexj.container.SimpleContainerStrategy">
		<constructor-arg value="Contact" />
		<constructor-arg value="Contact" />
		<constructor-arg><list>
			<bean class="org.tpspencer.tal.mvc.sample.objex.model.contact.ContactStrategy" />
			<bean class="org.tpspencer.tal.mvc.sample.objex.model.common.AddressStrategy" />
		</list></constructor-arg>
		<property name="standardListeners">
			<list>
				<bean p:container="Callers" p:eventProcessor="onContactUpdate" p:onEdit="true" class="org.tpspencer.tal.objexj.events.SimpleEventListener" />
			</list>
		</property>
	</bean>
	
	<bean id="contactContainerFactory" class="org.tpspencer.tal.objexj.locator.SimpleContainerFactory">
		<constructor-arg ref="contactContainerStrategy" />
		<constructor-arg ref="objexMiddlewareFactory" />
	</bean>
	
	
</beans>